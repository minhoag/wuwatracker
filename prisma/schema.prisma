generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model User {
  id           String      @id @default(cuid())
  role         String      @default("USER")
  email        String      @unique
  password     String
  firstName    String
  lastName     String
  pulls        Int         @default(0)
  pity         Int         @default(0)
  astriteSpent Int         @default(0)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  Character    Character[]
}

model Character {
  id          String      @id @default(cuid())
  name        String
  Event       Event?      @relation(fields: [eventId], references: [id])
  Rarity      Rarity
  Attribute   Attribuites
  WeaponType  String
  Description String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  eventId     String?
  userId      String?
  User        User?       @relation(fields: [userId], references: [id])
}

model Event {
  id          String      @id @default(cuid())
  name        String      @unique
  imgSrc      String[]
  eventType   EventType
  description String
  duration    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  Character   Character[]
}

enum Rarity {
  FiveStar
  FourStar
  ThreeStar
}

enum Attribuites {
  Fusion
  Glacio
  Aero
  Electro
  Spectro
  Havoc
}

enum EventType {
  Character
  Weapon
  Event
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}
